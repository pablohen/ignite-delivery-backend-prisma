{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "strict": true,
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@infra/*": ["./src/infra/*"],
      "@useCases/*": ["./src/useCases/*"]
    }
  }
}
